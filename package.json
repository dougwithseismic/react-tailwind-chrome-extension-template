{
    "name": "web-extension-boilerplate-23",
    "longName": "Web Extension Boilerplate by withSeismic.com",
    "description": "Web Extension Boilerplate by withSeismic.com",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "format": "prettier --write \"./src/**/*.ts\" \"./src/**/*.tsx\"",
        "start": "concurrently \"npm run dev\" \"npm run build\"",
        "tailwind": "tailwindcss -i src/styles/index.css -o dist/assets/index.css",
        "dev": "vite",
        "build": "tsc && vite build && npm run build:js",
        "build:pre": "esno scripts/prebuild.ts",
        "build:post": "esno scripts/postbuild.ts",
        "build:js": "vite build --config vite.config.content.ts",
        "preview": "vite preview"
    },
    "author": "Doug Silkstone <doug@withseismic.com>",
    "license": "ISC",
    "devDependencies": {
        "@types/chrome": "^0.0.240",
        "@types/fs-extra": "^11.0.1",
        "@types/node": "^20.4.1",
        "@types/react": "^18.2.14",
        "@types/react-dom": "^18.2.6",
        "@types/webextension-polyfill": "^0.10.1",
        "@vitejs/plugin-react": "^4.0.3",
        "autoprefixer": "^10.4.14",
        "concurrently": "^8.2.0",
        "esno": "^0.16.3",
        "fs-extra": "^11.1.1",
        "postcss": "^8.4.25",
        "prettier": "^3.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.3.2",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6",
        "unplugin-auto-import": "^0.16.6",
        "vite": "^4.4.3",
        "vite-plugin-static-copy": "^0.16.0",
        "webext-bridge": "^6.0.1",
        "webextension-polyfill": "^0.10.0",
        "webextension-polyfill-ts": "^0.26.0"
    }
}
